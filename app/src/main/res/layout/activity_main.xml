<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="moreira.iuri.agenda.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="22dp"
            android:hint="Nome"
            android:layout_margin="5dp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/txtTelefone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="22dp"
            android:hint="Telefone"
            android:layout_margin="5dp">
        </EditText>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="22dp"
            android:hint="Email"
            android:layout_margin="5dp">
        </EditText>

        <EditText
            android:id="@+id/txtCidade"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="22dp"
            android:hint="Cidade"
            android:layout_margin="5dp">
        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar contato"
            android:onClick="SalvarContato"
            android:layout_alignTop="@+id/button2"
            android:layout_alignRight="@+id/editText1"
            android:layout_alignEnd="@+id/editText1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver lista de contatos"
            android:onClick="mostrarListaContatos"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/editText1"
            android:layout_alignStart="@+id/editText1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpar lista de contatos"
            android:onClick="deletarContatos"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/editText1"
            android:layout_alignStart="@+id/editText1" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
